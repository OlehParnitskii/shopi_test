
<div class="breadcrumbs">
  <div class="container">
    <ul>
      <li><a href="index.html">Головна</a></li>
      <li>Питання та відповіді (FAQ)</li>
    </ul>
  </div>
</div>
<div class="content bg-grey">
  <div class="container">
    <div class="title text-center">
      <h1>{{ page.title }}</h1>
    </div>
    <div class="subtitle text-center">{{ page.content }}</div>
    <div class="faq">
      <div class="faq-list">
        {%- for block in section.blocks -%}
        <div class="faq-list__box">
          <div class="faq-list__box-head js-faq-toggle">{{ block.settings.title }}<span class="icon icon-i-arr-down"></span></div>
          <div class="faq-list__box-body">
            <p>{{ block.settings.text }}</p>
          </div>
        </div>
        {% endfor %}

      </div>
    </div>
  </div>
</div>

{% schema %}
{
"name": {
"en": "FAQ"
},
"blocks": [
{
"type": "text",
"name": {
"en": "Text"
},
"settings": [
{
"label": {
"en": "Title"
},
"id": "title",
"type": "text"
},
{
"label": {
"en": "Text"
},
"id": "text",
"type": "richtext"
}
]
}
]
}
{% endschema %}
